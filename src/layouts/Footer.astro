      <p class="text-sm">
        © {currentDate}
        <a class="text-sm" href="https://credo.codes" target="_blank"
          >David Credo</a
        > &&
        <a class="text-sm" href="https://jonakönig.de" target="_blank"
          >Jona König</a
        >
      </p>
      <p class="text-sm">
        <a class="text-sm" href="../impressum">Impressum</a> || <a
          class="text-sm"
          href="../datenschutz">Datenschutz</a
        >
      </p>
    </div>
    <div>
      <!-- TODO: Links should behave the same on the entire website - so they have enlarge to 110% and change color -->
