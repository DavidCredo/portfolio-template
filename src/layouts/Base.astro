---
import Layout from "./Layout.astro";
import Footer from "./Footer.astro";
import { getEntry } from "astro:content";

const layout = await getEntry("layout", "data");
const { title, headerText } = Astro.props;
---

<script>
  // Toggle mobile menu
  document.querySelectorAll(".hamburger").forEach((button) =>
    button.addEventListener("click", () => {
      const mobileMenu = document.querySelector(".mobile-menu");
      if (mobileMenu) {
        mobileMenu.classList.toggle("hidden");
      } else {
        console.error("Mobile menu not found");
      }
    }),
  );
</script>

<Layout title={title}>
  <!-- TODO: Header auslagern, Navigation weniger doppeln -->
  <!-- TODO: IMPORTANT SIMPLE UX MEASURE: show where you are at the navigation -->
  <header>
    <nav
      class="flex items-center justify-between p-6 lg:px-8"
      aria-label="Global"
    >
      <div class="flex lg:flex-1">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">{headerText}</span>
          <img class="h-8 w-auto" src={layout.data.header.logo} alt="" />
        </a>
      </div>
      <div class="flex lg:hidden">
        <button
          type="button"
          class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-200 hamburger"
        >
          <span class="sr-only">Hauptmenü öffnen</span>
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
          </svg>
        </button>
      </div>
      <div class="hidden lg:flex lg:gap-x-12">
        <a
          href="/projects"
          class="text-sm lg:text-base font-semibold leading-6 text-gray-200"
          >Portfolio</a
        >
        <a
          href="/aboutMe"
          class="text-sm lg:text-base font-semibold leading-6 text-gray-200"
          >Über mich</a
        >
        <a
          href=`mailto:${layout.data.head.mailadress}`
          class="text-sm lg:text-base font-semibold leading-6 text-gray-200"
          >Schreib mir!</a
        >
      </div>
    </nav>
    <!-- Mobile menu, show/hide based on menu open state. -->
    <div class="lg:hidden mobile-menu hidden" role="dialog" aria-modal="true">
      <!-- Background backdrop, show/hide based on slide-over state. -->
      <div class="fixed inset-0 z-50 hidden"></div>
      <div
        class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-black px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-100/10"
      >
        <div class="flex items-center justify-between">
          <a href="/" class="-m-1.5 p-1.5">
            <span class="sr-only">{headerText}</span>
            <img class="h-8 w-auto" src={layout.data.header.logo} alt="" />
          </a>
          <button
            type="button"
            class="-m-2.5 rounded-md p-2.5 text-gray-200 hamburger"
          >
            <span class="sr-only">Menü schließen</span>
            <svg
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <div class="mt-6 flow-root">
          <div class="-my-6 divide-y divide-gray-100/10">
            <div class="space-y-2 py-6">
              <a
                href="/projects"
                class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-200 hover:bg-gray-800"
                >Portfolio</a
              >
              <a
                href="/aboutMe"
                class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-200 hover:bg-gray-800"
                >Über mich</a
              >
              <a
                href=`mailto:${layout.data.head.mailadress}`
                class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-200 hover:bg-gray-800"
                >Schreib mir!</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  <main class="grow mb-20">
    <slot />
  </main>
  <Footer />
</Layout>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  /* TODO: We need to do more work here and delete duplicate local stlyes afterwards! */
  * {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;

    @apply text-gray-200 text-base;
  }
  body {
    /* slate 800 */
    background-color: #1f2937;
  }
  h1 {
    @apply text-3xl font-bold pb-8;
  }

  h2 {
    @apply text-2xl font-bold pt-8;
  }

  p {
    @apply my-4;
  }
